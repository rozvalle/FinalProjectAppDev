<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="183dp"
        android:layout_marginTop="-80dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/trivialogo" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:entries="@array/trivia_categories" />

    <Button
        android:id="@+id/startTriviaButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00324b"
        android:text="Start Trivia"
        android:textColorLink="#00324b"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/leaderboardButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00324b"
        android:text="Leaderboards"
        android:textColorLink="#00324b"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00324b"
        android:text="Logout"
        app:cornerRadius="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by: Francis Elmo Valeros"
        android:textAlignment="center" />

</LinearLayout>
